<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Feedback</title>
  <!-- Bootstrap CSS CDN -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body { background: #f7f7f7; }
    .feedback-container { margin-top: 2rem; }
    .feedback-card { margin-bottom: 1.5rem; }
  </style>
</head>
<body>
  <div class="container feedback-container">
    <h2 class="mb-4 text-center">All Feedback</h2>
    <% if (feedbacks && feedbacks.length > 0) { %>
      <% feedbacks.forEach(function(feedback) { %>
        <div class="card feedback-card">
          <div class="card-body">
            <p class="card-text"><%= feedback.message %></p>
            <p class="card-text">
              <small class="text-muted">Rating: <%= feedback.rating %> | Submitted by: <%= feedback.user ? feedback.user.firstName + ' ' + feedback.user.lastName : 'Anonymous' %></small>
            </p>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="alert alert-info">No feedback found.</div>
    <% } %>
    <div class="text-center mt-3">
      <a href="/feedback/submit">Submit New Feedback</a>
    </div>
  </div>

  <!-- Bootstrap and jQuery JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
